				<content type="grid">
					<grids>
						<grid>
							<series name="TGT Map Grid">
								<tile href="#L1"/>
							</series>
							<labelOptions fontType= "Helvetica" color="red" factor="0.3"/>
							<Style id="test1">
								<LineStyle>
									<color>red</color>
